@model IEnumerable<WebApplicationThucHanh2.Models.TLoaiSp>
<div class="col-lg-3">
    <div class="hero__categories">
        <div class="hero__categories__all">
            <i class="fa fa-bars"></i>
            <span>ĐÂY LÀ LOẠI SẢN PHẢM </span>
        </div>
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <a asp-controller="Home" asp-action="GetProductByCategory" asp-route-maloai ="@item.MaLoai">
                        @item.Loai
                    </a>
                </li>
            })
           
        </ul>
    </div>
</div>