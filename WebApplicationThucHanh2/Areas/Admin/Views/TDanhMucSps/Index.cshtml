<!-- Index.cshtml -->
@model IEnumerable<WebApplicationThucHanh2.Models.TDanhMucSp>

@{
    ViewData["Title"] = "Trang chủ quản trị";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <h1 class="mt-4">Chào mừng đến với Trang quản trị</h1>
    <p>Đây là trang chính của hệ thống quản trị. Tại đây, bạn có thể quản lý các sản phẩm và danh mục sản phẩm.</p>

    <p>
        <a class="btn btn-success" asp-action="Create">Tạo sản phẩm mới</a>
    </p>

    <!-- Tạo một bảng hiển thị dữ liệu sản phẩm -->
    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Danh mục</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TenSp)</td>
                    <td>@Html.DisplayFor(modelItem => item.GiaNhoNhat) VND</td>
                    <td>@Html.DisplayFor(modelItem => item.MaLoaiNavigation.Loai)</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.MaSp">Sửa</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.MaSp">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
